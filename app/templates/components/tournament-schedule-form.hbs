<div class="tournament-schedule-form-wrapper">
    <h2 class="tournament-schedule-form-header">
        {{#if (eq tournamentScheduleFormType 1)}}
            Schedule Event
        {{else if (eq tournamentScheduleFormType 2)}}
            Update Event
        {{else if (eq tournamentScheduleFormType 3)}}
            Cancel Event
        {{/if}}
    </h2>
    
    <form class="tournament-schedule-form" >
        {{#if (eq tournamentFormType 1)}}
            {{#if (eq tournament.sportType 1)}}
                {{#if (eq teamRegistrationType 0)}}
                    {{text-input inputName='teamName' inputId='create-teamname' labelName='Team Name' isRequired=true errorMessage=validationErrors.teamName}}
                {{else if (eq teamRegistrationType 1)}}
                    {{#select-input inputName="teamId" inputId="join-teamlist" labelName='Select Team' defaultValue=(object 'value' '' 'selected' true 'disabled' true 'hidden' true 'displayName' 'Select Team') isRequired=true errorMessage=validationErrors.teamId}}
                        {{#each teams as |team|}}
                            <option value={{team.teamId}}>{{team.teamName}}</option>
                        {{/each}}
                    {{/select-input}}
                {{/if}}
            {{/if}}
        {{else if (eq tournamentFormType 2)}}
            {{text-input inputName='teamName' inputId='update-teamname' labelName='New Team Name' isRequired=true defaultValue=userParticipation.teamName errorMessage=validationErrors.teamName}}
        {{/if}}

        {{text-input inputName='tournamentEventDate' inputId='schedule-eventdate' labelName='Event Date' isRequired=true errorMessage=validationErrors.tournamentEventDate}}
        {{text-input inputName='tournamentEventVenue' inputId='schedule-eventvenue' labelName='Event Venue' isRequired=true errorMessage=validationErrors.tournamentEventVenue}}
        {{text-input inputName='tournamentEventRound' inputId='schedule-eventround' labelName='Event Round' isRequired=true errorMessage=validationErrors.tournamentEventRound}}
        <p class="tournament-participation-form-info">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm8.706-1.442c1.146-.573 2.437.463 2.126 1.706l-.709 2.836.042-.02a.75.75 0 0 1 .67 1.34l-.04.022c-1.147.573-2.438-.463-2.127-1.706l.71-2.836-.042.02a.75.75 0 1 1-.671-1.34l.041-.022ZM12 9a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
            </svg>
            {{#if (eq tournamentFormType 1)}}
                Registering for 
            {{else if (eq tournamentFormType 2)}}
                Save changes for 
            {{else if (eq tournamentFormType 3)}}
                Are you sure? Want to unregister 
            {{/if}}
            <span>
                {{tournament.tournamentName}}
            </span>
        </p>
        <div class="tournament-participation-form-buttons">
            {{general-button class='br-orange bg-white ft-orange soft-corner' buttonName='Cancel' onClick=(action closeTournamentForm) }}
            {{general-button class=(concat 'ft-white soft-corner ' (if (eq tournamentFormType 3) 'br-red bg-red' 'br-blue bg-blue')) type='submit' buttonName='Confirm'}}
        </div>
    </form>
</div>

{{yield}}
