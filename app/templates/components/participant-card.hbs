<div class="participant-card-info">
    <span class="ft-night-black capitalize">{{participant.userName}}</span>
    {{#if pinCard}}
        <div class="ft-night-black pincard">
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 20 20" xml:space="preserve">
                <path d="M19.3 4.3 15.7.7C14.4-.6 12.1.1 11.8 2l-.2 1.4-3.3 3.3c-2.4-.6-4.9.1-6.6 1.8-.4.4-.4 1 0 1.4l3.5 3.5-4.9 4.9c-.4.4-.4 1 0 1.4s1 .4 1.4 0l4.9-4.9 3.5 3.5c.4.4 1 .4 1.4 0 1.7-1.7 2.4-4.3 1.8-6.6l3.4-3.4 1.3-.2c1.9-.2 2.7-2.5 1.3-3.8zm-1.5 1.9-1.7.2c-.2 0-.4.1-.6.3l-4 4c-.3.3-.4.7-.2 1 .5 1.5.3 3.1-.5 4.4-1.2-1.1-1.7-1.6-7-6.8 1.3-.8 2.9-1.1 4.4-.5.4.1.8 0 1-.2l4-4c.2-.2.3-.4.3-.6l.2-1.7c0-.2.3-.3.5-.2l3.6 3.6c.3.2.2.4 0 .5z" fill="currentColor" opacity="1" data-original="currentColor" />
            </svg>
        </div>
    {{/if}}
</div>
<div class="participant-card-buttons">
    {{#if (or (eq userInfo.role 1) (eq userInfo.role 2))}}
        {{#if (eq participant.participantStatus 0)}}
            {{general-button class='br-red bg-red ft-white pd-sm ft-xs curved' buttonName='Disqualify' onClick=(action 'changeParticipantStatus' 1)}}
        {{else if (eq participant.participantStatus 1)}}
            {{general-button class='br-green bg-green ft-white pd-sm ft-xs curved' buttonName='Permit' onClick=(action 'changeParticipantStatus' 0)}}
        {{else}}
            {{general-button class='br-light-grey bg-pale-white ft-light-grey pd-sm ft-xs curved' buttonName=(if (eq participant.participantStatus 3) 'Won' 'Lost') disabled=true}}
        {{/if}}
    {{/if}}
</div>
{{yield}}
