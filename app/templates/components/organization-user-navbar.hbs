<div class="organization-user-navbar-box">
    {{#if (or (eq userInfo.role 1) (eq userInfo.role 2))}}
        {{#general-button class='br-green bg-green ft-white soft-corner' buttonName='Member' isSVG=true onClick=(action openAddUserForm)}}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.75" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
        {{/general-button}}
    {{/if}}
    {{#if (gt currentPage 0)}}
        {{#general-button class='br-light-grey bg-white ft-grey pd-sq circle' isSVG=true onClick=(action 'prevPage')}}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" >
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
            </svg>
        {{/general-button}}
    {{else}}
        {{#general-button class='br-light-grey bg-white ft-grey pd-sq circle' isSVG=true disabled=true}}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" >
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
            </svg>
        {{/general-button}}
    {{/if}}
    {{#if (lt currentPage (subtract totalPages 1))}}
        {{#general-button class='br-light-grey bg-white ft-grey pd-sq circle' isSVG=true onClick=(action 'nextPage')}}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" >
                <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
            </svg>
        {{/general-button}}
    {{else}}
        {{#general-button class='br-light-grey bg-white ft-grey pd-sq circle' isSVG=true disabled=true}}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" >
                <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
            </svg>
        {{/general-button}}
    {{/if}}
</div>
<div class="organization-user-navbar-box">
    {{search-bar minWait=300 searchHandler=searchOrganizationUsers objectKey='searchValue' searchValue=searchValue searchBarId='organization-user-search-bar' class='max-width-lg'}}
    {{select-input class='pd-xs bg-white' inputName='sort' onChange=searchOrganizationUsers objectKey='sortValue' selectedValue=sortValue options=sortOptions }}
    {{select-input class='pd-xs bg-white' inputName='order' onChange=searchOrganizationUsers objectKey='orderValue' selectedValue=orderValue options=orderOptions }}
</div>
{{yield}}
