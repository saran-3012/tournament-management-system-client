<div class="input-box {{unless errorMessage 'br-light-grey' 'br-red'}}">
    {{#if labelName}}
        <label class="input-label" for={{inputId}}>
            {{labelName}} 
            {{#if isRequired}} 
                <span class="input-required ft-red">*</span>
            {{/if}}
        </label>
    {{/if}}
    <input id={{inputId}} name={{inputName}} type={{if isPasswordVisible 'text' 'password'}} class="input-field" placeholder={{inputPlaceholder}} {{action 'handleInputChange' on='input'}} autocomplete="off"/>
    {{general-button class='no-border bg-transparent no-padding icon-sm' buttonIcon=(if isPasswordVisible 'images/eye-icon.svg' 'images/eye-slash-icon.svg') onClick=(action 'togglePasswordVisibility') }}
</div>
{{#if errorMessage}}
    <p class="input-error">{{errorMessage}}</p>
{{/if}}
{{yield}}
